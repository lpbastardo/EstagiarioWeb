}

<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:1000px; height:530px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://s.glbimg.com/po/tt/f/original/2011/06/10/gamer-supreme.jpg" alt="1" style="width:1000px;height:530px;">
            </div>
            <div class="item">
                <img src="https://resources.rocketz.com.br/products/70/product_image/full_997330705c0d6d29a35c3c69bf80fc07" alt="2" style="width:1000px;height:530px;">
            </div>
            <div class="item">
                <img src="https://www.palpitedigital.com/wp-content/uploads/2013/04/pc.jpg" alt="3" style="width:1000px;height:530px;">
            </div>
            <div class="item">
                <img src="https://i.ytimg.com/vi/OpJuJHowtYc/maxresdefault.jpg" alt="4" style="width:1000px;height:530px;">
            </div>
            <div class="item">
                <img src="https://nerdstreamdotme.files.wordpress.com/2012/06/2ejag49.jpg" alt="5" style="width:1000px;height:530px;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

